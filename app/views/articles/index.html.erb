<div class="container">
  <ul class="list-unstyled articles">
    <% @articles.each do |article| %>
      <li class="article-list">
        <%= link_to article.title, article_path(article) %>
        <p>
          <small><%= article.content %></small>
        </p>
      </li>
    <% end %>
  </ul>
</div>
